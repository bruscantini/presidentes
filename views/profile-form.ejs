<div class="col-xs-6 col-md-4">
  <h4 class="username-profile"><%=user.username%></h4>
   <div class="profile-picture">
     <img src="images/Scarlett_Johansson.jpg" alt="...">
   </div>
   <div class="caption">
     <h6><%=user.name%></h6>
     <h6><%=user.surname%></h6>
     <h6><%=user.email%></h6>
     <h6><%=user.address%></h6>
     <button type="button" name="button"><a href="/profile-form" class="update-profile" role="button">Update profile</a></button>
     <button type="button" name="button"><a href="/add-photo" class="add-item-profile" role="button">Add photo</a></button>
   </div>
 </div>

<div class="col-md-8 col-md-4">
  <h2>Create profile</h2>

  <form action="/profile-form" method="POST" id="form-profile">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Name" value="<%=user.name%>">
    <br><br>
    <label for="surname">Surname</label>
    <input type="text" name="surname" placeholder="Surname" value="<%=user.surname%>">
    <br><br>
    <label for="address">Address</label>
    <input type="text" name="address" placeholder="00 example St, City" value="<%=user.address%>">
    <br><br>
    <label for="email">Email</label>
    <input type="text" name="email" placeholder="example@mail.com" value="<%=user.email%>">
    <br><br>
    <label for="phone">Phone</label>
    <input type="text" name="phone" placeholder="000000000" value="<%=user.phone%>">
    <br><br>

    <button>Add photo</button>
      <button>Create profile</button>
  </form>
</div>
