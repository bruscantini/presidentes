<div class="col-xs-6 col-md-4">
  <h4 class="username-profile"><%=user.username%></h4>
   <div class="profile-picture">
     <img src="images/Scarlett_Johansson.jpg" alt="...">
   </div>
   <div class="caption">
     <h6><%=user.name%></h6>
     <h6><%=user.surname%></h6>
     <h6><%=user.email%></h6>
     <h6><%=user.address%></h6>
     <button type="button" name="button"><a href="/profile-form" class="update-profile" role="button">Update profile</a></button>
     <button type="button" name="button"><a href="/add-photo" class="add-item-profile" role="button">Add photo</a></button>
   </div>
 </div>

 <div class="col-xs-12 col-md-8">
   <% if (items.length > 0){ %>
     <div class="container-fluid">
       <div class="row">

   <%    for (let i = 0; i < items.length; ++i){  %>
   <%      let item = items[i];                   %>
         <div class="col-xs-3 col-md-2">
           <a href="/item/<%=item.id%>">
           <div class="thumbnail">
             <img src="<%=item.picPath%>" alt="...">
             <div class="caption">
               <h3><%=item.name%></h3>
             </div>
           </div>
           </a>
         </div>
   <%    }                                          %>
       </div>
     </div>
   <% }                                              %>
 </div>
